<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_holo_light" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/ImageButton01"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goSearchPlants"
                    android:src="@drawable/btn_join_plants" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnSearchCancer"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goSearchCancer"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_search_cancer" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnRequest"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goRequest"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_request" />

            </LinearLayout>

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnSpeech"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goSpeech"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_speech" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnAsk"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goAskDetails"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_ask" />

            </LinearLayout>

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnJoinNews"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goSafetyNews"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_news" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnRecommend"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_recommend" />

            </LinearLayout>

            <LinearLayout
                style="@style/join_linear_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnSupport"
                    style="@style/join_button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="goSupport"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_join_support" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
